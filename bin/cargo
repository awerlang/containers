#!/bin/bash

is_container() {
    local name=$1
    docker ps --all --format '{{.Names}}' | fgrep -w $name &>/dev/null
}

if ! is_container rust; then
    docker create --name rust \
                  --label=persistent \
                  -v /etc/localtime:/etc/localtime:ro \
                  -v /tmp/cargo \
                  awerlang/rust
fi

docker run -it --rm --volumes-from=rust -v $(pwd):/src awerlang/rust "$@"
