#!/bin/bash

IMAGE=$1
CONTEXT=${2-.}
DATE=$(date +%Y%m%d)

build() {
    mkdir -p $HOME/.cache/podman/leap/metadata/{raw,solv}
    mkdir -p $HOME/.cache/podman/leap/${IMAGE}
    buildah bud --layers \
                --build-arg=LOCAL_UID="$(id -u)" \
                --build-arg=LOCAL_GID="$(id -g)" \
                --volume $HOME/.cache/podman/leap/metadata/raw:/var/cache/zypp/raw:O \
                --volume $HOME/.cache/podman/leap/metadata/solv:/var/cache/zypp/solv:O \
                --volume $HOME/.cache/podman/leap/${IMAGE}:/var/cache/zypp/packages \
                -t awerlang/${IMAGE} \
                -t awerlang/${IMAGE}:${DATE} \
                $CONTEXT
}

build
