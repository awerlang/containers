#!/bin/bash

start() {
    [[ -n "$1" ]] && cd $(readlink -f $(dirname $0)/..)/${1} || exit 1

    local name=$(make name)
    create_as_needed ${name} && make run && podman start ${name}
}

is_image() {
    local name=$1
    podman image exists "$name"
}

is_container() {
    local name=$1
    podman container exists "$name"
}

create_as_needed() {
    if ! is_container "$1"; then
        if ! is_image "awerlang/$1"; then
            notify-send "$1" "Image for $1 must be built before use"
        fi
        echo 'Creating container' | grep --color=always .
        make create >/dev/null
    fi
}

result=$(start "$1")
if [[ $? -ne 0 ]]; then
    notify-send "$1" "$result"
fi
